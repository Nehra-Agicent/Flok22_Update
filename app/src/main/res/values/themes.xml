<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flok22" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_color</item>
        <item name="colorPrimaryVariant">#ff9f3f</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_color</item>
        <item name="colorSecondaryVariant">#b34000</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <!--    style for user image icons-->
    <style name="cornerRoundImage" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <!--    style for fab gradient-->
    <style name="Floating" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/location_fab_gradient</item>
    </style>
    <style name="FloatingPlus" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/group_16</item>
    </style>

    <style name="FloatingBtn" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/flok_btn</item>
    </style>

    <style name="FloatingBtnCheckOut" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/check_out</item>
    </style>

    <style name="Theme_Dialog">
        <item name="android:windowBackground">@drawable/bottom_round</item>
    </style>

    <style name="Theme_Dialog_Rounded">
        <item name="android:windowBackground">@drawable/location_dialog_corner</item>
    </style>

    <!--CardView    -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_20sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_20sdp</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Spinner     -->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <!--Switch    -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

</resources>