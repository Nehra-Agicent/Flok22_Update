<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger white circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size
                android:width="@dimen/_40sdp"
                android:height="@dimen/_40sdp" />
        </shape>
    </item>
    <!-- Smaller blue circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@android:color/transparent" />
            <gradient
                android:angle="90"
                android:endColor="#DD7621"
                android:startColor="#8DEDFE"
                android:type="linear" />
            <size
                android:width="@dimen/_35sdp"
                android:height="@dimen/_35sdp" />
        </shape>
    </item>
    <item
        android:width="@dimen/_30sdp"
        android:height="@dimen/_30sdp"
        android:drawable="@drawable/check_out_button"
        android:gravity="center" />
</layer-list>